<!-- app/views/restaurants/show.html.erb -->
<h1><%= @task.title %></h1>
<p><%= @task.details %></p>
<% if @task.completed %>
  <i class='far fa-check-square'></i>
<% else %>
  <i class='far fa-square'></i>
<% end %>
<span><%= @message %></span>
<br>

<%= link_to "Edit this task", edit_task_path %>
<br>
<%= link_to "Delete", task_path(@task),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
<br>
<p><%= link_to "Back to list", tasks_path %></p>
